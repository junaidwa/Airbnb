<% layout('layouts/boilerplate') %>
<!-- <%= success %> -->
<div class="listings-container">
    <h1 class="page-title">Explore Destinations</h1>
    
    <div class="listings-grid">
        <% for(let Listings of Alllistings) { %>
            <div class="card">
                <img src="<%= Listings.image.url %>" class="card-img-top" alt="<%= Listings.title %>">
                <div class="card-body">
                    <h2 class="card-title"><%= Listings.title %></h2>
                    <p class="card-text"><%= Listings.description %></p>
                    <div class="card-price">$<%= Listings.price %>/night</div>
                    <div class="card-location">
                        üìç <%= Listings.location %>
                    </div>
                    <div class="card-buttons">
                        <a href="/listings/<%= Listings._id %>" class="btn btn-primary">View Details</a>
                        <form method="POST" action="/listings/<%= Listings._id %>?_method=DELETE" style="display: inline;">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
