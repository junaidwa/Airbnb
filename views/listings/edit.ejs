<% layout('layouts/boilerplate') %>
<body>
    <form action="/listings/<%= foundListing._id %>?_method=PUT" method="POST">
        <h1>Edit Listing</h1>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= foundListing.title %>" required>
        <br><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= foundListing.description %></textarea>
        <br><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= foundListing.price %>" required>
        <br><br>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= foundListing.location %>" required>
        <br><br>

        <button type="submit">Update Listing</button>
    </form>
    
</body>
