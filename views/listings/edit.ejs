<% layout('layouts/boilerplate') %>
<body>
<form action="/listings/<%= foundListing._id %>?_method=PUT" method="POST">
  <h1>Edit Listing</h1>

  <label for="title">Title:</label>
  <input type="text" id="title" name="listing[title]" value="<%= foundListing.title %>" >
  <br><br>

  <label for="description">Description:</label>
  <textarea id="description" name="listing[description]" required><%= foundListing.description %></textarea>
  <br><br>

  <label for="price">Price:</label>
  <input type="number" id="price" name="listing[price]" value="<%= foundListing.price %>" >
  <br><br>


  <label for="location">Location:</label>
  <input type="text" id="location" name="listing[location]" value="<%= foundListing.location %>">
  <br><br>

  <button type="submit">Update Listing</button>
</form>

</body>
