<% layout('layouts/boilerplate') %>
<body>
<form action="/listings/<%= foundListing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <h1>Edit Listing</h1>

  <label for="title">Title:</label>
  <input type="text" id="title" name="listing[title]" value="<%= foundListing.title %>" >
  <br><br>

  <label for="description">Description:</label>
  <textarea id="description" name="listing[description]" required><%= foundListing.description %></textarea>
  <br><br>
  <div>
      <p>Original Listing Image</p>

    <img src="<%= foundListing.image.url %>" alt="image preview before eiditing" style="max-width: 200px; max-height: 200px;">
  </div>
  <br>
  

  <label for="image">upload new Image:</label>
  <input type="file" id="image" name="listing[image]"  >
  <br><br>  

  <label for="price">Price:</label>
  <input type="number" id="price" name="listing[price]" value="<%= foundListing.price %>" >
  <br><br>


  <label for="location">Location:</label>
  <input type="text" id="location" name="listing[location]" value="<%= foundListing.location %>">
  <br><br>

  <button type="submit">Update Listing</button>
</form>

</body>
